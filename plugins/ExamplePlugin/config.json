{
  "version": "1.0.0",
  "last_updated": "2025-12-30",
  "description": "示例插件配置 - 演示标准配置格式",

  "fields": {
    "EXAMPLE_ENABLED": {
      "type": "checkbox",
      "label": "启用示例插件",
      "description": "是否启用示例插件功能",
      "default": "1",
      "group": "general",
      "order": 1
    },
    "EXAMPLE_DEBUG_MODE": {
      "type": "checkbox",
      "label": "调试模式",
      "description": "启用调试模式，记录详细的运行日志",
      "default": "0",
      "group": "general",
      "order": 2
    },
    "EXAMPLE_API_ENDPOINT": {
      "type": "url",
      "label": "API端点",
      "placeholder": "请输入API端点URL",
      "description": "示例API的服务端点地址",
      "default": "https://api.example.com",
      "validation": "nullable|url",
      "group": "api",
      "order": 1
    },
    "EXAMPLE_API_KEY": {
      "type": "password",
      "label": "API密钥",
      "placeholder": "请输入API访问密钥",
      "description": "访问示例API所需的密钥",
      "validation": "nullable|string|min:8",
      "group": "api",
      "order": 2
    },
    "EXAMPLE_TIMEOUT": {
      "type": "number",
      "label": "请求超时时间",
      "placeholder": "请输入超时时间（秒）",
      "description": "API请求的超时时间",
      "default": "30",
      "validation": "integer|min:5|max:300",
      "group": "api",
      "order": 3
    },
    "EXAMPLE_CACHE_TTL": {
      "type": "number",
      "label": "缓存时间",
      "placeholder": "请输入缓存时间（秒）",
      "description": "数据缓存的有效时间",
      "default": "3600",
      "validation": "integer|min:60|max:86400",
      "group": "cache",
      "order": 1
    },
    "EXAMPLE_MAX_ITEMS": {
      "type": "number",
      "label": "最大项目数",
      "placeholder": "请输入最大项目数量",
      "description": "列表中显示的最大项目数量",
      "default": "50",
      "validation": "integer|min:1|max:1000",
      "group": "display",
      "order": 1
    },
    "EXAMPLE_DISPLAY_MODE": {
      "type": "select",
      "label": "显示模式",
      "description": "选择数据显示的方式",
      "default": "list",
      "options": [
        {"value": "list", "label": "列表模式"},
        {"value": "grid", "label": "网格模式"},
        {"value": "card", "label": "卡片模式"}
      ],
      "group": "display",
      "order": 2
    },
    "EXAMPLE_NOTIFICATION_EMAIL": {
      "type": "email",
      "label": "通知邮箱",
      "placeholder": "请输入通知邮箱地址",
      "description": "接收系统通知的邮箱地址",
      "validation": "nullable|email",
      "group": "notification",
      "order": 1
    },
    "EXAMPLE_NOTIFICATION_WEBHOOK": {
      "type": "url",
      "label": "Webhook地址",
      "placeholder": "请输入Webhook回调地址",
      "description": "接收通知的Webhook地址",
      "validation": "nullable|url",
      "group": "notification",
      "order": 2
    }
  },

  "groups": {
    "general": {
      "label": "通用设置",
      "description": "插件的基本设置",
      "icon": "settings",
      "order": 1
    },
    "api": {
      "label": "API配置",
      "description": "第三方API相关配置",
      "icon": "globe",
      "order": 2
    },
    "cache": {
      "label": "缓存设置",
      "description": "数据缓存相关配置",
      "icon": "database",
      "order": 3
    },
    "display": {
      "label": "显示设置",
      "description": "界面显示相关配置",
      "icon": "eye",
      "order": 4
    },
    "notification": {
      "label": "通知设置",
      "description": "系统通知相关配置",
      "icon": "bell",
      "order": 5
    }
  },

  "values": {
    "EXAMPLE_ENABLED": "1",
    "EXAMPLE_DEBUG_MODE": "0",
    "EXAMPLE_API_ENDPOINT": "https://api.example.com",
    "EXAMPLE_API_KEY": "",
    "EXAMPLE_TIMEOUT": 30,
    "EXAMPLE_CACHE_TTL": 3600,
    "EXAMPLE_MAX_ITEMS": 50,
    "EXAMPLE_DISPLAY_MODE": "list",
    "EXAMPLE_NOTIFICATION_EMAIL": "",
    "EXAMPLE_NOTIFICATION_WEBHOOK": ""
  }
}
